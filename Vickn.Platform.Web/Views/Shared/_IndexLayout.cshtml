@using System.Threading
@using System.Web.Optimization
@using Abp.Timing
@using Abp.Web.Mvc.Extensions
@using Vickn.Platform
@{
    SetAntiForgeryCookie();
}
<!DOCTYPE html>
<html lang="zh-CN">
<head>
    <meta charset="utf-8">
    <meta name="renderer" content="webkit|ie-comp|ie-stand">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width,initial-scale=1,minimum-scale=1.0,maximum-scale=1.0,user-scalable=no" />
    <meta http-equiv="Cache-Control" content="no-siteapp" />
    <meta name="keywords" content="@PlatformConsts.AppName">
    <meta name="description" content="@PlatformConsts.AppName">

    <LINK rel="Bookmark" href="/favicon.ico">
    <LINK rel="Shortcut Icon" href="/favicon.ico" />

    <title>@PlatformConsts.AppName</title>
    <link rel="shortcut icon" href="~/favicon.ico">

    @Styles.Render("~/Bundles/vendor/css")

    <!-- View specific styles -->
    @RenderSection("styles", required: false)

    <script type="text/javascript">
        //This is used to get the application's root path from javascript. It's useful if you're running application in a virtual directory under IIS.
        var abp = abp || {}; abp.appPath = '@ApplicationPath';
    </script>

    <script src="~/Scripts/jquery-2.2.0.min.js"></script>
    <script src="~/H-ui.admin_v2.5/lib/jquery/1.9.1/jquery.min.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>

    @Scripts.Render("~/Bundles/vendor/js/top")

    <!--[if lt IE 9]>
        <script type="text/javascript" src="/Content/H-ui.admin_v2.5/lib/html5.js"></script>
        <script type="text/javascript" src="/Content/H-ui.admin_v2.5/lib/respond.min.js"></script>
            <script type="text/javascript" src="/Content/H-ui.admin_v2.5/lib/PIE_IE678.js"></script>
        <![endif]-->
    <!--[if IE 6]>
    <script src="~/Content/H-ui.admin_v2.5/lib/DD_belatedPNG_0.0.8a-min.js"></script>
            <script>DD_belatedPNG.fix('*');</script>
            <![endif]-->
</head>
<body>
    <div>
        @RenderBody()
    </div>

    @Scripts.Render("~/Bundles/vendor/js/bottom")
    @Scripts.Render("~/Bundles/js")

    <script>
        //Localizing momentjs
      
    moment.locale('@Thread.CurrentThread.CurrentUICulture.Name');
        //moment.locale('zh-CN');
    </script>

    <!-- Dynamic scripts of ABP system (They are created on runtime and can not be bundled) -->
    <script src="~/api/AbpServiceProxies/GetAll?v=@(Clock.Now.Ticks)"></script>
    <script src="~/AbpScripts/GetScripts?v=@(Clock.Now.Ticks)" type="text/javascript"></script>

    <!-- SignalR scripts -->
    <script src="~/signalr/hubs"></script>
    @Html.IncludeScript("~/Abp/Framework/scripts/libs/abp.signalr.js")

    <!-- View specific scripts -->
    @RenderSection("scripts", required: false)
</body>
</html>
