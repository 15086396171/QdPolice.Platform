@using Abp.Collections.Extensions
@using Vickn.Platform.Web.Views
@model Vickn.Platform.Web.Models.Layout.TopMenuViewModel
@{
    var calculateMenuUrl = new Func<string, string>((url) =>
    {
        if (string.IsNullOrEmpty(url))
        {
            return ApplicationPath;
        }

        if (UrlChecker.IsRooted(url))
        {
            return url;
        }

        return ApplicationPath + url;
    });
}
<aside class="Hui-aside">
    <input runat="server" id="divScrollValue" type="hidden" value=""/>
    <div class="menu_dropdown bk_2">
        @foreach (var menuItem in Model.MainMenu.Items)
        {
            <dl id="">
                <dt><i class="Hui-iconfont @menuItem.Icon"></i> @menuItem.DisplayName<i class="Hui-iconfont menu_dropdown-arrow">&#xe6d5;</i></dt>
                <dd>
                    <ul>
                        @foreach (var subMenuItem in menuItem.Items)
                        {
                            <li><a data-href="@subMenuItem.Url" data-title="@subMenuItem.DisplayName" href="javascript:void(0)">@subMenuItem.DisplayName</a></li>
                        }
                    </ul>
                </dd>
            </dl>
        }
    </div>
</aside>
<div class="dislpayArrow hidden-xs"><a class="pngfix" href="javascript:void(0);" onClick="displaynavbar(this)"></a></div>
