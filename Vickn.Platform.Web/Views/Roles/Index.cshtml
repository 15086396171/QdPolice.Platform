@using System.Web.Optimization
@using System.Web.UI.WebControls
@using System.Web.UI.WebControls.Expressions
@using Abp.Authorization
@using Abp.Web.Mvc.Extensions
@using Vickn.Platform.Authorization.Roles.Authorization
@using Vickn.Platform.Users.Authorization
@{
    ViewBag.Menu = L("Role");
    ViewBag.SecMenu = L("Role");
    ViewBag.createBtn = L("CreateRole");
    ViewBag.editBtn = L("EditRole");

    ViewBag.ActiveMenu = "Roles"; //The menu item will be active for this page.
}
@Html.Partial("~/Views/Common/_Navigation.cshtml")
<div class="page-container">
    <div class="text-c">
        <input type="text" placeholder="@L("Role.Name")" class="input-text" id="name" style="width: 250px;" />
        <button type="button" class="btn btn-success" id="search" name=""><i class="Hui-iconfont">&#xe665;</i>@L("Search")</button>
        <button type="button" class="btn btn-default" id="research"><i class="Hui-iconfont">&#xe66b;</i>@L("ReSearch")</button>
    </div>
    <div class="cl pd-5 bg-1 bk-gray mt-20">
        <span class="l">
            @if (IsGranted(RoleAppPermissions.Role_DeleteRole))
            {
                <a href="javascript:;" class="btn btn-danger radius" id="batchDelete"><i class="Hui-iconfont">&#xe6e2;</i> @L("BatchDelete")</a>
            }
            @if (IsGranted(RoleAppPermissions.Role_CreateRole))
            {
                <a href="javascript:;" class="btn btn-primary radius" id="create" data-title="@ViewBag.createBtn">
                    <i class="Hui-iconfont">&#xe600;</i> @ViewBag.createBtn
                </a>
            }
        </span>
    </div>
    <table class="table table-border table-bordered table-bg dataTable">
        <thead>
            <tr class="text-c">
                <th width="25"><input type="checkbox"></th>
                <th>@L("Role.Name")</th>
                <th>@L("Role.DisplayName")</th>
                <th>@L("Role.IsStatic")</th>
                <th>@L("Role.IsDefault")</th>
                <th>@L("Operational")</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

    <div id="modal-setPermission" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content radius">
                <div class="modal-header">
                    <h3 class="modal-title">设置角色权限</h3>
                    <a class="close" data-dismiss="modal" aria-hidden="true" href="javascript:void();">×</a>
                </div>
                <div class="modal-body" id="content">
                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary btn-SetPermissionOk">确定</button>
                    <button class="btn" data-dismiss="modal" aria-hidden="true">关闭</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section styles{
    @Styles.Render("~/Bundles/lib/css/jstree")
}

@section scripts{
    @Html.IncludeScript("~/js/datatable.extend.js")
    @Scripts.Render("~/Bundles/lib/js/jstree")
    @Html.IncludeScript("~/Views/Roles/_PermissionTree.js")
    @Html.IncludeScript("~/Views/Roles/Index.js")
}
