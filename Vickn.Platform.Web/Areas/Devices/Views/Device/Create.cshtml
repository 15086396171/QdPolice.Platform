@model Vickn.Platform.HandheldTerminals.Devices.Dtos.DeviceForEdit

@{
    ViewBag.Menu = L("Devices");
    ViewBag.SubMenu = L("Device");
}
<div class="row animated fadeInRight">
  <div class="ibox-content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        @Html.ValidationSummary(true, "", new { @class = "alert alert-danger summary-validation-error" })

        <div class="form-horizontal">

          <div class="hidden">
            @Html.HiddenFor(model => model.DeviceEditDto.Id)
          </div>

          <div class="form-group">
            @Html.LabelFor(model => model.DeviceEditDto.Imei, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
              @Html.EditorFor(model => model.DeviceEditDto.Imei, new { htmlAttributes = new { @class = "form-control",@readonly="readonly" } })
              @Html.ValidationMessageFor(model => model.DeviceEditDto.Imei, "", new { @class = "text-danger" })
            </div>
          </div>

          <div class="form-group">
            @Html.LabelFor(model => model.DeviceEditDto.No, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-8">
              @Html.EditorFor(model => model.DeviceEditDto.No, new { htmlAttributes = new { @class = "form-control" } })
              @Html.ValidationMessageFor(model => model.DeviceEditDto.No, "", new { @class = "text-danger" })
            </div>
          </div>

          @Html.Partial("/Views/Common/_FooterWithSaveAndCancel.cshtml")
        </div>
    }
  </div>
</div>


@section styles{
  <style>
  </style>
}

@section scripts{
  <script>

  </script>
}


