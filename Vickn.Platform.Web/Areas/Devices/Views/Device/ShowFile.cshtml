@using Abp.Web.Mvc.Extensions
<div class="row">
  <div class="col-sm-3">
    <div class="ibox float-e-margins">
      <div class="ibox-content">
        <div class="file-manager">
          <h5>显示：</h5>
          <a href="javascript:;" id="all" class="file-control active" data-type="">所有</a>
          <a href="javascript:;" class="file-control" data-type="0">录音</a>
          <a href="javascript:;" class="file-control" data-type="1">视频</a>
          <a href="javascript:;" class="file-control" data-type="2">图片</a>
          <input type="hidden" value="@ViewBag.id" id="deviceId" />
          <div class="hr-line-dashed"></div>
          <button class="btn btn-info btn-block" onclick="window.history.back();">返回</button>
          <div class="hr-line-dashed"></div>
          <h5>文件夹</h5>
          <ul class="folder-list" style="padding: 0">
            <li>
              <a href="javascript:;" class="file-control" data-type="0"><i class="fa fa-folder"></i> 录音</a>
            </li>
            <li>
              <a href="javascript:;" class="file-control" data-type="1"><i class="fa fa-folder"></i> 视频</a>
            </li>
            <li>
              <a href="javascript:;" class="file-control" data-type="2"><i class="fa fa-folder"></i> 图片</a>
            </li>
          </ul>
          <h5 class="tag-title">标签</h5>
          <ul class="tag-list" style="padding: 0" id="tag"></ul>
          <div class="clearfix"></div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-sm-9 animated fadeInRight">
    <div class="row">
      <div class="col-sm-12" id="files">
      </div>
    </div>
  </div>
</div>

@section scripts{
  @Html.IncludeScript("~/Areas/Devices/Views/Device/ShowFile.js")
}