@using System.Web.Optimization
@using System.Web.UI.WebControls
@using System.Web.UI.WebControls.Expressions
@using Abp.Authorization
@using Abp.Web.Mvc.Extensions
@using Vickn.Platform.Zero.UserPositions.Authorization
@{
    ViewBag.Menu = L("UserPositions");
    ViewBag.SubMenu = L("UserPosition");
}

<div class="row animated fadeInRight">
        <div class="ibox-content">
            <div class="form-inline">
                <div class="form-group">
                    <label>@L("UserPosition.PositionName")</label>
                    <input type="text" placeholder="@L("FilterText")" class="form-control" id="filterText" style="width: 250px;" />

					 <button type="button" class="btn btn-default" id="research"><span class="glyphicon glyphicon-refresh"></span> @L("ReSearch")</button>
                    <button type="button" class="btn btn-success" id="search" name=""><span class="glyphicon glyphicon-search"></span> @L("Search")</button>
                   @if (IsGranted(UserPositionAppPermissions.UserPosition_CreateUserPosition))
                    {
                        <a href="javascript:;" class="btn btn-primary" id="create" >
                            <span class="glyphicon glyphicon-plus"></span> @L("CreateUserPosition")
                        </a>
                    }
					@if (IsGranted(UserPositionAppPermissions.UserPosition_DeleteUserPosition))
                    {
                        <a href="javascript:;" class="btn btn-danger" id="batchDelete"><span class="glyphicon glyphicon-trash"></span> @L("BatchDelete")</a>
                    }
                     
                </div>
            </div>
        </div>

        <div class="ibox-content">
            <table class="table table-border table-bordered table-hover table-bg dataTable">
                <thead>
                    <tr>
                        <th width="25"><input type="checkbox" class="checkall"></th>
                                              <th>@L("UserPosition.PositionName")</th>
                                             <th>@L("UserPosition.RankOfPosition")</th>
                                          <th>@L("Operational")</th>
                    </tr>
                </thead>
                <tbody></tbody>
            </table>
    </div>
</div>

@section styles{
   
}

@section scripts{
    @Html.IncludeScript("~/Areas/UserPositions/Views/UserPosition/index_js.js")
}

