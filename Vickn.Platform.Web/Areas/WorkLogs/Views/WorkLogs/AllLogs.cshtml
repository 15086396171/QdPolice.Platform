@using Abp.Web.Mvc.Extensions
@using Vickn.Platform.WorkLogs.Authorization
@model Vickn.Platform.Web.Areas.WorkLogs.Models.AllLogsViewModel
@{
    ViewBag.Menu = L("WorkLogs");
    ViewBag.SubMenu = L("WorkLog");
    ViewBag.createBtn = L("CreateWorkLog");
    ViewBag.editBtn = L("EditWorkLog");

    ViewBag.ActiveMenu = "WorkLogs"; //The menu item will be active for this page.
}
@Html.Partial("~/Views/Common/_Navigation.cshtml")
<div class="page-container">
    <div class="text-c">
        <input type="text" placeholder="@L("WorkLog.Title")" class="input-text radius" id="title" style="width: 250px;" />
        <input type="text" placeholder="@L("WorkLog.User.Name")" @(!Model.IsAll ? "hidden" : "") class="input-text radius" id="name" style="width: 250px;" />
        <input type="hidden" id="isAll" value="@Model.IsAll.ToString()" style="width: 250px;" />
        <button type="button" class="btn btn-success" id="search" name=""><i class="Hui-iconfont">&#xe665;</i>@L("Search")</button>
        <button type="button" class="btn btn-default" id="research"><i class="Hui-iconfont">&#xe66b;</i>@L("ReSearch")</button>
    </div>
    <div class="cl pd-5 bg-1 bk-gray mt-20">
        <span class="l">
            @if (IsGranted(WorkLogAppPermissions.WorkLog_CreateWorkLog))
            {
                <a href="javascript:;" class="btn btn-primary radius" id="create" data-title="@ViewBag.createBtn">
                    <i class="Hui-iconfont">&#xe600;</i> @ViewBag.createBtn
                </a>
            }
        </span>
    </div>
    <table class="table table-border table-bordered table-bg dataTable">
        <thead>
            <tr class="text-c">
                <th width="25"><input type="checkbox"></th>
                <th>@L("WorkLog.Title")</th>
                <th>@L("WorkLog.User.Name")</th>
                <th>@L("WorkLog.Time")</th>
            </tr>
        </thead>
        <tbody></tbody>
    </table>

</div>

@section scripts{
    @Html.IncludeScript("~/Areas/WorkLogs/Views/WorkLogs/AllLog.js")
}
